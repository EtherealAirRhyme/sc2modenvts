{
    "extends": "./tsconfig.base",
    "compilerOptions": {
        "paths": {
            "@sugarcube-modloader/*": [
                "./types/sugarcube-modloader/*",
            ],
            "*": [
                "./packages/*/src"
            ]
        },
        "listEmittedFiles": true,
        "skipLibCheck": true,
        "disableSolutionSearching": true
    },
    "include": [
        "packages/**/src/**/*",
        "external/**/src/**/*",
        "types/**/*.d.ts",
    ],
    "exclude": [
        "dist",
        "build",
        "node_modules",
    ],
    "files": [],
    "references": [
        {
            "path": "./packages/scripts/tsconfig.json"
        }
    ]
}